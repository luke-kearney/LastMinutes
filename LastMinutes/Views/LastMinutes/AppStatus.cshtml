@model LastMinutes.Models.ViewModels.AppStatusViewModel
@{
    ViewData["Title"] = "App Status"; 
}

<div class="col-12 col-md-6 text-center d-flex justify-content-center flex-wrap">
    <div class="col-12">
        <h1><a asp-action="Index" asp-controller="LastMinutes" class="text-decoration-none link-light" onmouseover="this.style.color='gold'" onmouseout="this.style.color='white'">LastMinutes</a></h1>
    </div>

    <div class="col-12 col-lg-5 text-start">
        <h3>App Status</h3>


            <p>

                <b>Queue Count: </b> @Model.QueueLength<br />
                <b>Results Count: </b> @Model.ResultsAmount<br />
                <br />
                <b>Track Cache: </b> @Model.TrackCache<br />
                <br />
                <b>Total Runs: </b> @Model.Runs<br />
                <b>Total Minutes: </b> @Model.TotalMinutes<br />
                <br />


            </p>

    </div>
</div>

@section Scripts{
    <script>
        function reloadPage(){
            location.reload();
        }
        // Call the reloadPage function every 15 seconds
        setInterval(reloadPage, 15000); // 15000 milliseconds = 15 seconds
    </script>
}