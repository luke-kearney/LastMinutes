@model LastMinutes.Models.ViewModels.ResultsViewModel
@{
    ViewData["Title"] = "Your Minutes";
}


<div class="col d-flex justify-content-center">



    <div class="col-12 col-md-4 p-2 text-white">

        <h5>@Html.Raw("@")@Model.Username</h5>
        <br /><br />


        <h6>You have listened to</h6>
        <h1 class="my-1 mt-0 pt-0">@Model.TotalMinutes minutes</h1>

        <p>This was over a period of <b>all time</b>.</p>

        <br /><br /><br />

        <p><a asp-action="Refresh" asp-controller="LastMinutes" asp-route-Username="@Model.Username">Click here to refresh..</a></p>
    </div>

</div>